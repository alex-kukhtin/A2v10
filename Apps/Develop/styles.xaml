<!-- Common styles -->
<Styles xmlns="clr-namespace:A2v10.Xaml;assembly=A2v10.Xaml"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="DataGrid">
		<Setter Property="Striped" Value="True"/>
		<Setter Property="Hover" Value="True"/>
		<Setter Property="GridLines" Value="Vertical" />
		<Setter Property="HeadersVisibility" Value="Column" />
		<Setter Property="ItemsSource" Value="{Bind Parent.ItemsSource}"/>
		<Setter Property="UserSelect" Value="True"/>
	</Style>
	<Style x:Key="TestToolbar">
		<Setter Property="Padding" Value="1rem,1rem" />
	</Style>
</Styles>
